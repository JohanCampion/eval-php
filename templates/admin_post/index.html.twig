{% extends 'base.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block body %}
    <h1>Bonjour admin</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Category</th>
                <th>Featured</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.title }}</td>
                <td>{{ blog_post.Content }}</td>
                <td>{{ blog_post.date }}</td>
                <td>{{ blog_post.category.name }}</td>
                <td>{{ blog_post.featured ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('blog_post_show', {'id': blog_post.id}) }}">show</a>
                    <a href="{{ path('blog_post_edit', {'id': blog_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('blog_post_new') }}">Create new</a>
{% endblock %}
